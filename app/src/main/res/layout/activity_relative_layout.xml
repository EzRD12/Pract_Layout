<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ezrodriguez.dayonepract2.RelativeLayout"
    >

    <TextView
        android:id="@+id/txtRelative1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@color/colorWine"
        android:text="1" android:textColor="@color/colorGray"
        android:gravity="center" android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txtRelative2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@color/colorBlueDark"
        android:layout_below="@+id/txtRelative3"
        android:text="2" android:textColor="@color/colorGray"
        android:gravity="center" android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txtRelative3"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/txtRelative1"
        android:layout_alignParentRight="true"
        android:text="3" android:textColor="@color/colorGray"
        android:gravity="center" android:textStyle="bold"
        />


</RelativeLayout>
